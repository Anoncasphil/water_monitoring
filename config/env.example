# Database Configuration
# Copy this file to .env and update the values for your environment
# For shared hosting, place the .env file OUTSIDE the public_html folder for security

# Database Host (usually localhost for shared hosting)
DB_HOST=localhost

# Database Port (default MySQL port is 3306 for shared hosting)
DB_PORT=3306

# Database Name (your Hostinger database name)
DB_NAME=your_database_name

# Database Username (your Hostinger database username)
DB_USERNAME=your_database_username

# Database Password (your Hostinger database password)
DB_PASSWORD=your_database_password

# Database Charset
DB_CHARSET=utf8mb4

# Environment (development, staging, production)
APP_ENV=production

# Debug Mode (false for production)
APP_DEBUG=false

# Application URL (your domain)
APP_URL=https://yourdomain.com

# Timezone
APP_TIMEZONE=UTC

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=true

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# Logging
LOG_LEVEL=error
LOG_FILE=logs/app.log

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here 