# Database Configuration
# Copy this file to .env and update the values for your environment

# Database Host (usually localhost or 127.0.0.1 for local development)
DB_HOST=127.0.0.1

# Database Port (default MySQL port is 3306, XAMPP often uses 3307)
DB_PORT=3307

# Database Name
DB_NAME=water_quality_db

# Database Username (default XAMPP username is 'root')
DB_USERNAME=root

# Database Password (default XAMPP password is empty)
DB_PASSWORD=

# Database Charset
DB_CHARSET=utf8mb4

# Environment (development, staging, production)
APP_ENV=development

# Debug Mode (true for development, false for production)
APP_DEBUG=true

# Application URL
APP_URL=http://localhost/projtest

# Timezone
APP_TIMEZONE=UTC

# Session Configuration
SESSION_LIFETIME=120
SESSION_SECURE=false

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here 