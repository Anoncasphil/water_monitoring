# API Security Configuration - Allow HTTP access for Arduino/IoT devices
# Allow legitimate API access while protecting against abuse

# Disable directory browsing
Options -Indexes

# Allow HTTP access - disable HTTPS redirect for API endpoints
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Disable HTTPS redirect for API endpoints to allow Arduino HTTP access
    # This overrides any global HTTPS redirect rules
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule .* - [E=no-https-redirect:1]
    
    # Allow HTTP access for specific API files used by Arduino
    RewriteCond %{REQUEST_URI} ^/api/(relay_control|upload|get_readings)\.php$
    RewriteRule .* - [E=allow-http:1]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Allow mixed content for API endpoints (HTTP requests to HTTPS site)
    Header always set Content-Security-Policy "upgrade-insecure-requests; block-all-mixed-content;"
    Header always unset Content-Security-Policy env=allow-http
</IfModule>

# Allow access to ALL PHP files
<FilesMatch "\.(php)$">
    Require all granted
</FilesMatch>

# Allow access to specific files explicitly
<Files "execute_schedules.php">
    Require all granted
</Files>

<Files "execute_schedules_fixed.php">
    Require all granted
</Files>

<Files "test_file_structure.php">
    Require all granted
</Files>

<Files "check_files.php">
    Require all granted
</Files>

<Files "relay_control.php">
    Require all granted
</Files>

<Files "schedule_control.php">
    Require all granted
</Files>

# Prevent access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|db)$">
    Require all denied
</FilesMatch> 