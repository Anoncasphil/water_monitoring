# API Security Configuration - Allow HTTP access for Arduino/IoT devices
# Allow legitimate API access while protecting against abuse

# Disable directory browsing
Options -Indexes

# Allow HTTP access - disable HTTPS redirect for API endpoints
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # CRITICAL: Disable HTTPS redirect for ALL API endpoints to allow Arduino HTTP access
    # This prevents redirect loops while still allowing Arduino HTTP access
    
    # Set environment variables for API endpoints
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule .* - [E=api-endpoint:1]
    
    # Set environment variables for Arduino-specific endpoints
    RewriteCond %{REQUEST_URI} ^/api/(http_proxy|relay_control|upload|get_readings|test_http)\.php$
    RewriteRule .* - [E=arduino-endpoint:1]
    
    # Prevent HTTPS redirect for API endpoints - allow HTTP access for Arduino
    RewriteCond %{HTTPS} off
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule .* - [E=allow-http:1]
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Allow API endpoints to be accessed from both HTTP and HTTPS
    Header always set X-Frame-Options SAMEORIGIN env=api-endpoint
    Header always set X-Frame-Options DENY
    
    # Remove CSP restrictions for API endpoints to prevent mixed content issues
    Header always unset Content-Security-Policy env=api-endpoint
</IfModule>

# Allow access to ALL PHP files
<FilesMatch "\.(php)$">
    Require all granted
</FilesMatch>

# Allow access to specific files explicitly
<Files "execute_schedules.php">
    Require all granted
</Files>

<Files "execute_schedules_fixed.php">
    Require all granted
</Files>

<Files "test_file_structure.php">
    Require all granted
</Files>

<Files "check_files.php">
    Require all granted
</Files>

<Files "relay_control.php">
    Require all granted
</Files>

<Files "schedule_control.php">
    Require all granted
</Files>

# Prevent access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|db)$">
    Require all denied
</FilesMatch> 