# Normal HTTP configuration - No HTTPS enforcement
# Allow both HTTP and HTTPS access without forcing redirects

# Disable directory browsing
Options -Indexes

# Allow normal HTTP/HTTPS access without redirects
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Set environment variables for API endpoints
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule .* - [E=api-endpoint:1]
    
    # Set environment variables for Arduino-specific endpoints
    RewriteCond %{REQUEST_URI} ^/api/(http_proxy|relay_control|upload|get_readings|test_http|simple)\.php$
    RewriteRule .* - [E=arduino-endpoint:1]
    
    # Allow both HTTP and HTTPS access for API endpoints
    RewriteCond %{REQUEST_URI} ^/api/
    RewriteRule .* - [E=allow-http:1]
</IfModule>

# Minimal headers for Arduino compatibility - Security disabled
<IfModule mod_headers.c>
    # Only essential headers for Arduino communication
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Remove all security headers that might interfere with Arduino
    Header always unset X-Content-Type-Options env=api-endpoint
    Header always unset X-XSS-Protection env=api-endpoint
    Header always unset Referrer-Policy env=api-endpoint
    Header always unset X-Frame-Options env=api-endpoint
    Header always unset Content-Security-Policy env=api-endpoint
    Header always unset Strict-Transport-Security env=api-endpoint
</IfModule>

# Allow access to ALL PHP files
<FilesMatch "\.(php)$">
    Require all granted
</FilesMatch>

# Allow access to specific files explicitly
<Files "execute_schedules.php">
    Require all granted
</Files>

<Files "execute_schedules_fixed.php">
    Require all granted
</Files>

<Files "test_file_structure.php">
    Require all granted
</Files>

<Files "check_files.php">
    Require all granted
</Files>

<Files "relay_control.php">
    Require all granted
</Files>

<Files "schedule_control.php">
    Require all granted
</Files>

# Prevent access to sensitive files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql|db)$">
    Require all denied
</FilesMatch> 